<div class="row">
	<div class="col-lg-6 offset-md-3">
		<div class="card">
		  <div class="card-header">
		  	<center><h4>Create Event</h4></center>
		  </div>
		  <div class="card-body">
			<%= simple_form_for(@event, url: events_path) do |f| %>
				<div class="row">
					<div class="col-lg-12">
						<%= f.input :name, input_html: { class: 'form-control ' } %>
					</div>
				</div>
				<br>
				<div class="row">
					<div class="col-lg-12">
						<center>
							<%= f.button :submit,  class: "btn btn-primary"%>
						</center>
					</div>
				</div>
			<% end %>
		  </div>
		</div>
	</div>
</div>
