<div class="col-lg-6 offset-lg-3">
  <div class="card">
    <div class="card-header"><center><h4>Login In</h4></center></div>

    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'form-control ' } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: 'form-control ' } %>
      </div>
      <br>
      <div class="form-actions">
        <center>
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </center>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

